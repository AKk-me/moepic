<h4><%=t :record_add %><%= h(@user.pretty_name) %></h4>

<%= form_tag(:action => "create") do %>
  <%= hidden_field_tag "user_id", @user.id %>
  <table width="100%">
    <tbody>
      <tr>
        <th width="10%"><label><%=t :record_pos %></label></th>
        <td width="90%"><%= check_box "user_record", "is_positive" %></td>
      </tr>
      <tr>
        <th><label><%=t :record_reason %></label></th>
        <td><%= text_area "user_record", "body", :size => "20x8" %></td>
      </tr>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="2"><%= submit_tag t(:record_submit) %> <%= button_to_function t(:record_cancel), "location.back()" %></td>
      </tr>
    </tfoot>
  </table>
<% end %>
