  <li><%= link_to t(:static7), :action => "popular_by_day" %></li>
  <li><%= link_to t(:static8), :action => "popular_by_week" %></li>
  <li><%= link_to t(:static9), :action => "popular_by_month" %></li>
<% end %>

<%= render :partial => "footer" %>
