<div id="admin-edit-user">
  <%= form_tag :action => :edit_user do %>
    <table class="form">
      <tr>
        <th width="15%"><label class="block" for="user_name"><%= t('.user') %></label></th>
        <td width="85%">
          <%= text_field 'user', 'name', :class => 'ac-user-name' %>
        </td>
      </tr>
      <tr>
        <th>
          <label class="block" for="user_level"><%= t('.level') %></label>
        </th>
        <td>
          <%= select 'user', 'level', CONFIG['user_levels'].to_a.select { |x| x[1] > CONFIG['user_levels']['Blocked'] } %>
        </td>
      </tr>
      <tr>
        <td colspan="2"><%= submit_tag t('.save') %></td>
      </tr>
    </table>
  <% end %>
</div>
