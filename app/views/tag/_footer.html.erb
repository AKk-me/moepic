<% content_for :subnavbar do %>
  <li><%= link_to t(:tag_list), :controller => "tag", :action => "index" %></li>
  <li><%= link_to t(:tag_popular), :controller => "tag", :action => "popular_by_day" %></li>
  <li><%= link_to t(:tag_aliases), :controller => "tag_alias", :action => "index" %></li>
  <li><%= link_to t(:tag_imp), :controller => "tag_implication", :action => "index" %></li>
