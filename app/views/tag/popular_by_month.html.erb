<div id="tag-list">
  <h1><%= link_to '«', :controller => "tag", :action => "popular_by_month", :year => @day.prev_month.year, :month => @day.prev_month.month %> <%= @day.strftime("%B %Y") %> <%= link_to_unless @day >= Time.now, '»', :controller => "tag", :action => "popular_by_month", :year => @day.next_month.year, :month => @day.next_month.month %></h1>

  <%= cloud_view(@tags, 4) %>
</div>

<% content_for :footer do %>
  <p><%= link_to t(:tag_popular_day), :action => "popular_by_day" %> | <%= link_to t(:tag_popular_week), :action => "popular_by_week" %> | <%= link_to t(:tag_popular_month), :action => "popular_by_month" %></p>
<% end %>

<%= render :partial => "footer" %>
