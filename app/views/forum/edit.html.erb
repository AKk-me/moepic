<div id="preview" style="display: none; margin: 1em 0; width: 60em;">
</div>

<%= form_tag(:action => "update") do %>
  <%= render "shared/filter_spam" %>
  <%= hidden_field_tag "id", params[:id] %>
  <table>
    <tr><td><label for="forum_post_title"><%= t('.post_title') %></label></td><td><%= text_field "forum_post", "title", :size => 60 %></td></tr>
    <tr><td colspan="2"><%= text_area "forum_post", "body", :rows => 20, :cols => 80 %></td></tr>
    <tr><td colspan="2">
      <%= submit_tag t('.post') %>
      <%= submit_to_remote "preview", t('.preview'), :url => {:action => "preview"}, :update => "preview", :success => "$('preview').show()" %>
    </td></tr>
  </table>
<% end %>
