<% provide :title, t('.title') %>
<h3><%= t('.title') %></h3>

<%= link_to(image_tag(@post.preview_url), :controller => "post", :action => "show", :id => @post.id) %>

<p><%= t('.info') %></p>

<%= form_tag(:action => "add_post") do %>
  <%= hidden_field_tag("post_id", @post.id) %>

  <table>
    <tbody>
      <tr>
        <th width="15%"><label for="pool_name"><%= t('.pool') %></label></th>
        <td width="85%">
          <select name="pool_id">
            <%= options_from_collection_for_select @pools, :id, :pretty_name %>
          </select>
      </tr>
      <tr>
        <th><label for="pool_sequence"><%= t('.order') %></label></th>
        <td><%= text_field "pool", "sequence", :size => 5, :value => "" %></td>
      </tr>
    </tbody>
  </table>

  <%= submit_tag t('.add') %> <%= button_to_function t('.cancel'), "history.back()" %>
<% end %>

<%= render :partial => "footer" %>
