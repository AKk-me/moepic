<% if CONFIG['twitter_id'] %>
  <%= link_to "Follow @#{CONFIG['twitter_id']}", "https://twitter.com/#{CONFIG['twitter_id']}", :data => { :show_count => false }, :class => 'twitter-follow-button' %>
  <%= javascript_tag %{!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");} %>
<% end %>
