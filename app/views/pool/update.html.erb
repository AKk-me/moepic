<h3><%= t('.title') %></h3>

<%= form_tag(:action => "update") do %>
  <table class="form">
    <tbody>
      <tr>
        <th width="15%"><label for="pool_name"><%= t('.form.name') %></label></th>
        <td width="85%"><%= text_field "pool", "name", :value => @pool.pretty_name %></td>
      </tr>
      <tr>
        <th><label for="pool_description"><%= t('.form.description') %></label></th>
        <td><%= text_area "pool", "description", :size => "40x10" %></td>
      </tr>
      <tr>
        <th>
          <label for="pool_is_public"><%= t('.form.is_public._') %></label>
          <p><%= t('.form.is_public.info') %></p>
        </th>
        <td><%= check_box "pool", "is_public" %></td>
      </tr>
      <tr>
        <th>
          <label for="pool_is_active"><%= t('.form.is_active._') %></label>
          <p><%= t('.form.is_active.info') %></p>
        </th>
        <td><%= check_box "pool", "is_active" %></td>
      </tr>
      <tr>
        <td colspan="2"><%= submit_tag t('buttons.save') %> <%= button_to_function t('buttons.cancel'), "history.back()" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<%= render :partial => "footer" %>
