<% provide :title, t('.title') %>
<div style="width: 40em;">
<h4><%=t :user_signup_text %></h4>

<% if !CONFIG["enable_signups"] %>
  <p><%=t :user_signup_text2 %></p>
<% else %>
  <p><%=t :user_signup_text3 %><a href="/static/terms_of_service"><%=t :user_signup_text4 %></a><%=t :user_signup_text5 %><strong><%=t :user_signup_text6 %></strong></p>

  <%= form_tag(:controller => "user", :action => "create") do %>
    <table class="form">
      <tfoot>
        <tr>
          <td colspan="2">
            <input type="submit" value=<%=t :user_signup %>>
          </td>
        </tr>
      </tfoot>
      <tbody>
        <tr>
          <th width="15%">
            <label class="block" for="user_name"><%=t :user_signup_name %></label>
            <p><%=t :user_signup_text %></p>
          </th>
          <td width="85%">
            <%= text_field "user", "name", :size => 30 %>
          </td>
        </tr>
        <tr>
          <th>
            <label class="block" for="user_email"><%=t :user_signup_email %></label>
            <% if CONFIG["enable_account_email_activation"] == true %>
            	<p><%=t :user_signup_email_text_wa %></p>
            <% else %>
            	<p><%=t :user_signup_email_text %></p>
            <% end %>
          </th>
          <td>
            <%= text_field "user", "email", :size => 30 %>
          </td>
        </tr>
        <tr>
          <th>
            <label class="block" for="user_password"><%=t :user_password %></label>
            <p><%=t :user_password_text %></p>
          </th>
          <td>
            <%= password_field "user", "password", :size => 30 %>
          </td>
        </tr>
        <tr>
          <th>
            <label class="block" for="user_password_confirmation"><%=t :user_password_confirm %></label>
          </th>
          <td>
            <%= password_field "user", "password_confirmation", :size => 30 %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% end %>
</div>
<%= render :partial => "footer" %>
