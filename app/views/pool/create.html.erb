<% provide :title, t('.title') %>
<h3><%= t('.title') %></h3>

<%= form_tag({:action => "create"}, :level => :member) do %>
  <table class="form">
    <tbody>
      <tr>
        <th><label for="pool_name"><%= t('.name') %></label></th>
        <td><%= text_field "pool", "name" %></td>
      </tr>
      <tr>
        <th><label for="pool_is_public"><%= t('.is_public') %></label></th>
        <td><%= check_box "pool", "is_public" %></td>
      </tr>
      <tr>
        <th><label for="pool_description"><%= t('.description') %></label></th>
        <td><%= text_area "pool", "description", :size => "40x10" %></td>
      </tr>
      <tr>
        <td colspan="2"><%= submit_tag t('.save') %> <%= button_to_function t('.cancel'), "history.back()" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<%= render :partial => "footer" %>
